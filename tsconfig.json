{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022", "ESNext", "DOM"],
    "module": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmit": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "commands/**/*"  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
